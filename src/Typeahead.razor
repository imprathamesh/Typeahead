@using Microsoft.AspNetCore.Components.Web

@typeparam TItem
@typeparam TValue

<div class="typeahead @FieldCssClasses">
    <div class="typeahead-controls">
        @if (Disabled)
        {
            <div class="typeahead-input-mask-wrapper typeahead-input-mask-wrapper-disabled">
                @if (IsMultiselect)
                {
                    @if (Values != null)
                    {
                        @foreach (var value in Values)
                        {
                            <div class="typeahead-multi-value">
                                <div class="typeahead-multi-value-label">
                                    @SelectedTemplate(value)
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    if (Value != null)
                    {
                        <div class="typeahead-input-mask" tabindex="0">
                            @SelectedTemplate(Value)
                        </div>
                    }
                }
            </div>

            @if (EnableDropDown)
            {
                <div class="typeahead-input-icon typeahead-input-icon-disabled">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1" class="typeahead-down-arrow">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <polygon id="Shape" points="0 0 24 0 24 24 0 24" />
                            <path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" id="Path-94" fill-rule="nonzero" transform="translate(12.000003, 11.999999) rotate(-180.000000) translate(-12.000003, -11.999999) " />
                        </g>
                    </svg>
                </div>
            }
        }
        else
        {
            @if (IsMultiselect)
            {
                <div class="typeahead-input-multiselect-wrapper">
                    @if (Values != null)
                    {
                        @foreach (var value in Values)
                        {
                            <div class="typeahead-multi-value">
                                <div class="typeahead-multi-value-label">
                                    @SelectedTemplate(value)
                                </div>
                                <button type="button"
                                        class="typeahead-multi-value-clear"
                                        title="Remove Item"
                                        tabindex="-1"
                                        @onclick="@(() => RemoveValue(value))">
                                    <svg height="14" width="14" viewBox="0 0 20 20" aria-hidden="true" focusable="false">
                                        <path d="M14.348 14.849c-0.469 0.469-1.229 0.469-1.697 0l-2.651-3.030-2.651 3.029c-0.469 0.469-1.229 0.469-1.697 0-0.469-0.469-0.469-1.229 0-1.697l2.758-3.15-2.759-3.152c-0.469-0.469-0.469-1.228 0-1.697s1.228-0.469 1.697 0l2.652 3.031 2.651-3.031c0.469-0.469 1.228-0.469 1.697 0s0.469 1.229 0 1.697l-2.758 3.152 2.758 3.15c0.469 0.469 0.469 1.229 0 1.698z" />
                                    </svg>
                                </button>
                            </div>
                        }
                    }
                    <div class="form-floating">
                        <input @ref="_searchInput"
                               @bind-value="SearchText"
                               @bind-value:event="oninput"
                               @onkeydown="HandleKeydown"
                               @onkeyup="HandleKeyup"
                               @onkeyup:stopPropagation="@StopPropagation"
                               @onkeyup:preventDefault="@PreventDefault"
                               @onfocus="HandleInputFocus"
                               autocomplete="off"
                               @attributes="AdditionalAttributes"
                               type="text"
                               id="txtSearch"
                               class="typeahead-input typeahead-input-multi form-control" />  <label for="txtSearch">Search</label>
                    </div>
                </div>
            }
            else
            {
                if (IsShowingMask)
                {
                    <div class="typeahead-input-mask-wrapper">
                        <div class="typeahead-input-mask" @onclick="HandleClickOnMask" @onkeyup="HandleKeyUpOnMask" tabindex="0" @ref="_mask">
                            <div>
                                <label class="typeahead-input-mask-label text-muted text-sm">Search</label>
                            </div>
                            <div>
                                @SelectedTemplate(Value)
                            </div>
                        </div>

                        @if (!DisableClear)
                        {
                            <div class="typeahead-clear" @onclick="HandleClear" tabindex="-1">
                                &#10005;
                            </div>
                        }
                    </div>
                }
                <div class="form-floating @(IsShowingMask ? "typeahead-input-hidden" : null)">
                    <input @ref="_searchInput"
                           @bind-value="SearchText"
                           @bind-value:event="oninput"
                           @onkeyup="HandleKeyup"
                           @onkeyup:stopPropagation="@StopPropagation"
                           @onkeyup:preventDefault="@PreventDefault"
                           @onfocus="HandleInputFocus"
                           autocomplete="off"
                           @attributes="AdditionalAttributes"
                           type="text"
                           id="txtSearch"
                           class="typeahead-input form-control " />
                    <label for="txtSearch">Search</label>
                </div>
            }
        }

        @if (IsSearching)
        {
            @* <div class="typeahead-loader"></div> *@
            <div class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        }

        @if (!Disabled && EnableDropDown)
        {
            <div class="typeahead-input-icon" @onclick="ShowMaximumSuggestions" @onkeyup="HandleKeyUpOnShowDropDown" tabindex="@(IsShowingSuggestions ? "-1" : "0")">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1" class="typeahead-down-arrow">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <polygon id="Shape" points="0 0 24 0 24 24 0 24" />
                        <path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" id="Path-94" fill-rule="nonzero" transform="translate(12.000003, 11.999999) rotate(-180.000000) translate(-12.000003, -11.999999) " />
                    </g>
                </svg>
            </div>
        }
    </div>

    @if (ShouldShowHelpTemplate())
    {
        <div class="typeahead-results dropdown-menu">
            <div class="typeahead-results-help-template dropdown-item">
                @HelpTemplate
            </div>
        </div>
    }
    else if (ShouldShowSuggestions())
    {
        <div class="typeahead-results dropdown-menu">
            @if (HeaderTemplate != null)
            {
                <div class="typeahead-results-header dropdown-item">
                    @HeaderTemplate
                </div>
            }

            @for (var i = 0; i < Suggestions.Length; i++)
            {
                var item = Suggestions[i];

                <div @key="item"
                     class="typeahead-result dropdown-item @GetSelectedSuggestionClass(item, i)"
                     @onclick="@(_ => SelectResult(item))">
                    @ResultTemplate(item)
                </div>
            }

            @if (FooterTemplate != null)
            {
                <div class="typeahead-results-footer dropdown-item">
                    @FooterTemplate
                </div>
            }
        </div>
    }
    else if (ShowNotFound())
    {
        <div class="typeahead-results dropdown-menu">
            @if (HeaderTemplate != null)
            {
                <div class="typeahead-results-header dropdown-item">
                    @HeaderTemplate
                </div>
            }

            @if (NotFoundTemplate != null)
            {
                @if (AddItemOnEmptyResultMethod != null)
                {
                    <div class="typeahead-result dropdown-item @GetSelectedSuggestionClass(0)"
                         @onclick="@SelectNotFoundPlaceholder">
                        @NotFoundTemplate(SearchText)
                    </div>
                }
                else
                {
                    <div class="typeahead-notfound">
                        @NotFoundTemplate(SearchText)
                    </div>
                }
            }
            else
            {
                <div class="typeahead-notfound  dropdown-item">
                    No Results Found
                </div>
            }

            @if (FooterTemplate != null)
            {
                <div class="typeahead-results-footer dropdown-item">
                    @FooterTemplate
                </div>
            }
        </div>
    }
</div>
